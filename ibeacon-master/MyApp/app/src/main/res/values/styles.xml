        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
    </style>

    <style name="CollapsingTextAppearance1" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance1.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextComponent.ItemRow.Selectable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
