<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:cardCornerRadius="21sp"
        app:cardElevation="7sp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/sh_relay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayoutS_U"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_img_register1"
                android:gravity="center">
                <ImageView
                    android:layout_width="170sp"
                    android:layout_height="200sp"
                    android:padding="9sp"
                    android:src="@drawable/elegant_man_saluting"
                    android:tint="@color/black"
                    android:layout_marginTop="5sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="sans-serif"
                    android:text="Greeting my friend!!!"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageViewS_U"
                android:src="@drawable/square01"
                android:rotation="45"
                android:layout_below="@+id/linearLayoutS_U"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10sp"
                android:layout_width="20sp"
                android:layout_height="20sp" />

            <RelativeLayout
                android:id="@+id/sh_relay2"
                android:layout_below="@+id/imageViewS_U"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/start_txt"
                    android:background="@color/editTextBg"
                    android:paddingHorizontal="40dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sh_relay3"
                android:layout_below="@+id/sh_relay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBg"
                    android:paddingLeft="40sp"
                    android:text="@string/start_txt1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/sh_relay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_txtview"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:background="@color/editTextBg"
                    android:text="@string/start_txt2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:paddingHorizontal="40sp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rellay010"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60sp"
                android:layout_below="@+id/sh_relay3">
                <Button
                    android:id="@+id/Button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/color_img_register"
                    android:background="@drawable/roundedbutton"
                    android:text="Invite">

                </Button>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>